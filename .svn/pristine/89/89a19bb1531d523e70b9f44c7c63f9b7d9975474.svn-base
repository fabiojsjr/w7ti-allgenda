			salaReuniao.getThis(" idSalaReuniao =" + idSalaReuniao);			
			listReunioes = task.get(" dataHoraPrazo >= concat(curdate(), ' 00:00:00') AND dataHoraPrazo <= concat(curdate(), ' 23:59:59') AND idSala = " + idSalaReuniao + " ORDER BY dataHoraPrazo ASC LIMIT 7");			
		}		
