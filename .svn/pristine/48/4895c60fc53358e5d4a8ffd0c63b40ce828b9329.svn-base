function replaceQuebraLinha(campo, pattern){
	var regex = /\n/;
	while(campo.match(regex)){
		campo = campo.replace(regex, pattern);
	}
	return campo;
}
function replaceQuebraLinhaInvert(campo, pattern){
	var regex = /<br>/g;
	while(campo.match(regex)){
		campo = campo.replace(regex, pattern);
	}
	return campo;
}